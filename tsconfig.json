{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmit": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules"
  ]
}